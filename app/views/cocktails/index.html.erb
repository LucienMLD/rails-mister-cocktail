<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path('banner-cocktail.jpeg')%>');">
  <div class="banner-content">
    <h1>Mister cocktail</h1>
    <p>The cocktails of your life</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container padded">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <%= link_to(cocktail_path(cocktail)) do %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo.path, height: 300, width: 400, crop: :fill %>');">
            <div class="card-category"><h2><%= cocktail.name %></h2></div>
         </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

