<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %>
    <%= link_to "Delete this dose", dose_path(dose), method: :delete  %></li>
  <% end %>
</ul>
<p>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit %>
<% end %>

</p>
<p><%= link_to "Home", cocktails_path %></p>
